---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
const {pathname} = Astro.url
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <script is:inline src="/node_modules/htmx.org/dist/htmx.min.js"></script>
  </head>
  <body class="bg-gray-100">
    <div class="min-h-screen flex">
      <!-- Sidebar -->
      <nav class="bg-gray-800 w-64 p-6 space-y-4">
        <div class="text-white text-xl font-bold mb-8">Dashboard</div>
        <ul class="space-y-4">
            <li class=`px-4 py-2 rounded-md ${pathname.includes('admin/home')? 'bg-green-400 text-white hover:text-white': 'text-gray-300 hover:text-white'}`>
                <a href="/admin/home" class=`block`>Home</a>
            </li>
            <li class=`px-4 py-2 rounded-md ${pathname.includes('/admin/especies')? 'bg-green-400 text-white hover:text-white': 'text-gray-300 hover:text-white'}`>
                <a href="/admin/especies" class="block">Especies</a>
            </li>
            <li class=`px-4 py-2 rounded-md ${pathname.includes('/admin/habitats') ? 'bg-green-400 text-white hover:text-white': 'text-gray-300 hover:text-white'}`>
                <a href="/admin/habitats" class="block">Habitats</a>
            </li>
            <li class=`px-4 py-2 rounded-md ${pathname.includes('/admin/zonas')? 'bg-green-400 text-white hover:text-white': 'text-gray-300 hover:text-white'}`>
                <a href="/admin/zonas" class="block">Zonas</a>
            </li>
            <li class=`px-4 py-2 rounded-md ${pathname.includes('/admin/guias')? 'bg-green-400 text-white hover:text-white': 'text-gray-300 hover:text-white'}`>
                <a href="/admin/guias" class="block">Guias</a>
            </li>
            <li class=`px-4 py-2 rounded-md ${pathname.includes('/admin/cuidadores')? 'bg-green-400 text-white hover:text-white': 'text-gray-300 hover:text-white'}`>
                <a href="/admin/cuidadores" class=" block">Cuidadores</a>
            </li>
            <li class=`px-4 py-2 rounded-md ${pathname.includes('/admin/itinerarios')? 'bg-green-400 text-white hover:text-white': 'text-gray-300 hover:text-white'}`>
                <a href="/admin/itinerarios" class="block">Itinerarios</a>
            </li>
        </ul>
        
      </nav>

      <!-- Main Content -->
      <main class="flex-1 p-8 max-h-screen overflow-scroll">
        <slot />
      </main>
    </div>
  </body>
</html>